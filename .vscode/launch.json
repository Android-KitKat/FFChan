{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Qt Quick App",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/qt_quick_app",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: Build",
            "miDebuggerPath": "/usr/bin/gdb"
        }
            ,
            {
                "name": "Run Application (No Debug)",
                "type": "cppdbg",
                "request": "launch",
                "program": "${workspaceFolder}/build/src/qt_quick_app",
                "cwd": "${workspaceFolder}",
                "stopAtEntry": false,
                "externalConsole": false,
                "preLaunchTask": "CMake: Build",
                "miDebuggerPath": "/usr/bin/gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            }
    ]
}
